{
  "plugins": [
    "prettier",
    "unicorn",
    "import"
  ],
  "extends": [
    "airbnb-typescript/base",
    "plugin:unicorn/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": [
      ".tsconfig.json"
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "dot-notation": "off",
    // ESLint's rule
    "no-debugger": "off",
    "no-console": 0,
    "import/extensions": 0
  }
}